@model List<PoliziaApp.Models.VerbaliPerPersona>

@{
    ViewData["Title"] = "Verbali";

}
<div class="CustomTable">
    <h1 class="text-center">Numero di verbali per persona</h1>
    <hr />

<table class="table CustomTable">
    <thead>
        <tr>
            <th scope="col">Nominativo</th>
            <th scope="col">Numero di verbali</th>


        </tr>
    </thead>
    <tbody>
        @foreach (VerbaliPerPersona verbale in Model)
        {
            <tr>
                <td>@verbale.Nome @verbale.Cognome</td>

                <td>@verbale.TotaleVerbali</td>
            </tr>

        }
    </tbody>
</table>
</div>